@model IEnumerable<OtoSpaMVC.Models.Cart>

@{
    ViewData["Title"] = "Carts";
}

<h2>Carts</h2>

<p>
    <a asp-action="Create" class="btn btn-success"> <span class="fa fa-plus-square" aria-hidden="true"></span> Create New</a>
</p>
<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserName)
                </td>
                <td>
                    <partial name="_listButtons"
                             view-data='new ViewDataDictionary(this.ViewData){{ "targetId", item.ID }}' />                </td>
            </tr>
        }
    </tbody>
</table>
