@using Microsoft.AspNetCore.Identity
@using OtoSpaMVC.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@if (SignInManager.IsSignedIn(User))
{
<form class="form-inline my-2 my-lg-0" asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
    <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    <a class="btn btn-secondery" asp-area="" asp-controller="Purchases" asp-action="PreviousPurc"><i class="fa fa-shopping-bag"></i></a>
    <button type="submit" class="btn nav-link">Log out</button>
</form>
}
else
{
    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a>
}
