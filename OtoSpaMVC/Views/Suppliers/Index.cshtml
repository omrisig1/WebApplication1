@model IEnumerable<OtoSpaMVC.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h2>Suppliers</h2>
<link rel="stylesheet" href="~/css/TestBody.css" />
<div class="newBody">
    <p>
        <a asp-action="Create" class="btn btn-success"> <span class="fa-plus-square" aria-hidden="true"></span> Create New</a>
    </p>
    @using (Html.BeginForm())
    {
        <p>
            Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
            <input type="submit" value="Search" class="btn btn-primary" /> |
            <a asp-action="Index">Back to Full List</a>
        </p>
    }
    <table class="table table-striped table-hover table-condensed">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Contact)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Website)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Products)
                </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Contact)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Website)
                    </td>
                    <td>
                        @foreach (var m in item.Products)
                        {
                            @Html.DisplayFor(modelItem => m.Product.ProductName)<br>
                        }

                    </td>
                    <td>
                        <partial name="_listButtons"
                                 view-data='new ViewDataDictionary(this.ViewData){{ "targetId", item.ID }}' />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>